<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Log In</title>
    <link rel="icon" href="/assets/icon.ico">
    <link rel="stylesheet" href=<% if(theme == "true"){ %>
      <%= "/assets/darklog.css"  %>
    <% } else { %>
      <%= "/assets/logCSS.css"  %>
    <% } %>>
  </head>
  <body>
    <div class="wrapper">
      <h1 id="title">To Do &#8962;</h1>

      <div class="slides">
        <!-- Slideshow container -->
        <div class="slideshow-container">

          <!-- Full-width images with number and caption text -->
          <div class="mySlides fade">
            <div class="numbertext">1 / 3</div>
            <img src="/assets/img1.jpg" onclick="plusSlides(1)">
          </div>

          <div class="mySlides fade">
            <div class="numbertext">2 / 3</div>
            <img src="/assets/img2.jpg" onclick="plusSlides(1)">
          </div>

          <div class="mySlides fade">
            <div class="numbertext">3 / 3</div>
            <img src="/assets/img3.png" onclick="plusSlides(1)">
          </div>

          <!-- Next and previous buttons -->
          <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
          <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
        <br>

        <!-- The dots/circles -->
        <div class="dotsDiv">
          <span class="dot" onclick="currentSlide(1)"></span>
          <span class="dot" onclick="currentSlide(2)"></span>
          <span class="dot" onclick="currentSlide(3)"></span>
        </div>
      </div>

      <div class="data">
        <div class="popup">
          <span class="popuptext" id="errorPopup">The user informations are wrong!</span>
        </div>
        <h2>Login</h2>
        <form action="/login/enter" method="post" class="login">
          <label>Username</label><br>
          <input class="txt" type="text" name="name" minlength="3" placeholder="Enter your username..."><br> <!-- br is a line breaker -->
          <label>Password</label><br>
          <input class="txt" type="password" name="password" minlength="5" placeholder="Enter your password..."><br>
          <input type="submit" value="Sign in" id="submit"><br>
        </form>
        <form action="/register" method="get" class="dont">
          <input type="submit" value="Create account">
        </form>
      </div>
    </div>

    <script src="/assets/log.js"></script>
    <script type="text/javascript">
      if(<%= error %>){
        let errorPop = document.getElementById('errorPopup')
        errorPop.classList.toggle("show")
        errorPop.addEventListener('click', () => {
          errorPop.classList.toggle("show"); // Hide popup
        })
      }
    </script>
  </body>
</html>
